<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nawras.smartroute.Chercher_trajet">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="2.63"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:weightSum="10">

        <EditText
            android:id="@+id/editTextDepart"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text1"
            android:layout_alignStart="@+id/text1"
            android:layout_below="@+id/text1"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:breakStrategy="high_quality"
            android:ems="10"
            android:fontFamily="serif"
            android:hint="DÃ©part"
            android:inputType="text"
            android:singleLine="false"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextArriver"
            android:layout_width="233dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editTextNom"
            android:layout_alignStart="@+id/editTextNom"
            android:layout_below="@+id/editTextNom"
            android:layout_gravity="center"
            android:ems="10"
            android:fontFamily="serif"
            android:hint="Destination"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextDateC"
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editTextPreNom"
            android:layout_alignStart="@+id/editTextPreNom"
            android:layout_below="@+id/editTextPreNom"
            android:layout_gravity="center"
            android:ems="10"
            android:fontFamily="serif"
            android:hint="Date"
            android:inputType="date"
            android:digits="1234567890-"/>

        <Button
            android:id="@+id/btnChercher"
            style="@android:style/Widget.Button"
            android:layout_width="149dp"

            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:background="@color/bouton"
            android:elevation="0dp"
            android:fontFamily="serif"


            android:onClick="chercher"
            android:text="Chercher"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:visibility="visible" />
    </LinearLayout>
</FrameLayout>
